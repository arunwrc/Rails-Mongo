											<%= f.text_area :remarks %>
										</div>
									</div>
				 
								
							</div>	
							<div class="form-actions">
								<%= f.submit 'Save', :class => 'btn btn-success btn-xs' %>
							</div>						  
						</div>
						</div>
<% end %>
